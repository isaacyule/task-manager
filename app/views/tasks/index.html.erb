<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="text-center">My Tasks</h1>
    </div>
  </div>
  <div class="row">
    <% @tasks.each do |task|  %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="task">
          <li><i class="fa fa-square-o checkbox" aria-hidden="true"></i>
            <%= task.title %>
          </li>
        </div>
      </div>
    <% end %>
  </div>
</div>


