<div class="container">
  <h1 class="text-center">My Tasks</h1>
  <div class="row">
    <div class="col-md-6">
      <%= link_to "Add new task", tasks_new_path %>
    </div>
  </div>
  <div class="row">
    <% @tasks.each do |task|  %>
      <div class="col-xs-12 col-sm-6">
        <div class="task">
          <div class="row">
            <div class="col-xs-12">
              <i class="fa fa-square-o checkbox" aria-hidden="true"></i>
                <%= link_to task.title, task_path(task.id) %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <%= link_to "Edit task", task_edit_path(task.id) %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <%= link_to "Delete Task", task_delete_path(task.id), method: :delete, data: {confirm: "Are you sure?"} %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



