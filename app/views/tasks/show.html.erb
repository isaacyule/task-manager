<div class="container">
  <h1 class="text-center"><%= @task.title %></h1>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="task">
        <div class="row">
          <div class="col-xs-12">
            <p><%= @task.details %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <p class="status">
              Status: <%= @complete %>
            </p>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-3">
     <p class="text-center">
      <%= link_to "Return to Tasks", tasks_path %>
     </p>
    </div>
  </div>
</div>





